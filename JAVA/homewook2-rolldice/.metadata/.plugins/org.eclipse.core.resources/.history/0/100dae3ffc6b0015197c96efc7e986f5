package rolldice;

public class rolldice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		String game = null;
		int i=point1();
		
		switch(i)
		{
			
			case 2:
				game="你輸了!";
				break;
			case 3:
				game="你輸了!";
				break;
			case 12:
				game="你輸了!";
				break;
			case 7:
				game="你贏了!";
				break;
			case 11:
				game="你贏了!";
				break;
			default:
				int j=point2();
				switch(j)
				{
					case 7:
						game="你輸了!";
						break;
					default:
				}
			
		}
		System.out.println(game);
		
	}
	
	static int point1()
	{
		int i,j,p;
		i=(int)(Math.random()*6)+1;  //1-6的亂數
		j=(int)(Math.random()*6)+1;
		p=i+j;

		System.out.println("第一顆骰子的點數為:"+i);
		System.out.println("第二顆骰子的點數為:"+j);
		System.out.println("兩顆骰子相加的點數為:"+p);
		
		return p;
	
	}
	
	static int point2()
	{
		int target=point1();
		System.out.println("進入第二關");
		System.out.println("目標點數:"+target);
		
		
		int i,j,p;
		i=(int)(Math.random()*6)+1;  //1-6的亂數
		j=(int)(Math.random()*6)+1;
		p=i+j;

		System.out.println("第一顆骰子的點數為:"+i);
		System.out.println("第二顆骰子的點數為:"+j);
		System.out.println("兩顆骰子相加的點數為:"+p);

		return p;
		
		
	}


}
