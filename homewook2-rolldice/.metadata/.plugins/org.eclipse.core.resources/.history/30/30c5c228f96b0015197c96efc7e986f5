package rolldice;

public class rolldice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int i=point();
		while(i<=2)
		{
			System.out.println("你輸了！");
		}
		
		
		
	}
	
	static int point()
	{
		int i,j,p;
		i=(int)(Math.random()*6)+1;  //1-6的亂數
		j=(int)(Math.random()*6)+1;
		p=i+j;

		System.out.println("第一顆骰子的點數為:"+i);
		System.out.println("第二顆骰子的點數為:"+j);
		System.out.println("兩顆骰子相加的點數為:"+p);
		
		return p;
	
	}


}
