	}
	
	static int point1()
	{
		int i;
		i=(int)(Math.random()*6)+1;  //1-6的亂數
		return i;
	}
	
	static int point2()
	{
		int j;
		j=(int)(Math.random()*6)+1;  //1-6的亂數
		return j;
	}
	
	static int allpoint()
	{
		int a=point1();
		int b=point2();
		int p=a+b;
		return p;
	}
	
	
	
	
