package rolldice;

public class rolldice {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
	
		int a=point1();
		int b=point2();
		int c=allpoint();
		
		System.out.println("第一顆骰子的點數為:"+a);
		System.out.println("第二顆骰子的點數為:"+b);
		System.out.println("兩顆骰子相加的點數為:"+c);
		
		String game = null;
		
		switch(c)
		{
			
			case 2:
				game="你輸了!";
				break;
			case 3:
				game="你輸了!";
				break;
			case 12:
				game="你輸了!";
				break;
			case 7:
				game="你贏了!";
				break;
			case 11:
				game="你贏了!";
				break;
			default:
				
		}
		System.out.println(game);
		
	}
	
	static int point1()
	{
		int i;
		i=(int)(Math.random()*6)+1;  //1-6的亂數
		return i;
	}
	
	static int point2()
	{
		int j;
		j=(int)(Math.random()*6)+1;  //1-6的亂數
		return j;
	}
	
	static int allpoint()
	{
		int a=point1();
		int b=point2();
		int p=a+b;
		return p;
	}
	
}